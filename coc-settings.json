{
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"],
      "disableWorkspaceFolders": true,
      "trace.server": "verbose",
      "initializationOptions": {
        "usePlaceholders": true,
        "completeUnimported": true
      }
    }
  },
  "imselect.enableFloating": false
}
